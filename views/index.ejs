<html lang="en">

<head>
    <title>Restaurants</title>
    <link rel="stylesheet" type="text/css" href="./styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
</head>

<body>
    <main class="main-content">
        <%- include('partials/nav') %>
            <h1>Restaurant Menus</h1>
            <img src="https://images.unsplash.com/photo-1414235077428-338989a2e8c0?q=80&w=1740&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                height="300px" alt="Plates at a restaurant">
            <h2>Please choose your restaurant to get the menu</h2>
            <form action="/restaurant" method="GET">
                <label for="restaurantId">Select a restaurant:</label>
                <select name="restaurantId" id="restaurantId">
                    <% restaurants.forEach((restaurant)=> { %>
                        <option value="<%= restaurant.id %>">
                            <%= restaurant.name %>
                        </option>
                        <% }) %>
                </select>
                <button type="submit">Get the menu!</button>
            </form>

            <div class="featuredItem">
                <h3>Featured Menu Item </h3>
                <p>Restaurant: <%= restaurantName %>
                        <p> Item Name: <%= randomItem.name %>
                        </p>
                        <p> Cuisine Type: <%= randomCuisine %>
                        </p>
                        <p> Price: <%= randomItem.price %>
                        </p>
                        <p> Description: <%= randomItem.description %>
                        </p>
                        <% if (randomItem.special) { %>
                            <p>Item on special!</p>
                            <% } %>
            </div>
            <%- include('partials/footer') %>
    </main>
</body>

</html>