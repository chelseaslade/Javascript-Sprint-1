<html lang="en">

<head>
    <title>Restaurant Menu</title>
    <link rel="stylesheet" type="text/css" href="./styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
</head>

<body>
    <main class="main-content">
        <%- include('partials/nav') %>
            <h3>Restaurant Menu</h3>
            <img src="https://images.unsplash.com/uploads/1412198485051133af17f/5049dacb?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                height="300px">

            <h4>Cuisine Type: </h4>
            <%= randomCuisine %>

                <h4>Restaurant Name: </h4>
                <%= restaurantId %>

                    <div class="menuDisplay">
                        <ul>
                            <h4>Menu Items </h4>
                            <% randomMenu.forEach((item)=> { %>
                                <li>
                                    <p>Item Name: <%= item.name %>
                                    </p>
                                    <p>Item Price: <%= item.price %>
                                    </p>
                                    <p>Item Description: <%= item.description %>
                                    </p>
                                </li>
                                <% }); %>
                        </ul>

                        <% if (specials.length>0) { %>
                            <ul>
                                <h4>Daily Specials</h4>

                                <% specials.forEach((special)=> { %>
                                    <li>
                                        <p>
                                            Item Name: <%= special.name %>
                                        </p>
                                        <p> Item Price:
                                            <%= special.price %>
                                        </p>
                                        <p> Item Description:
                                            <%= special.description %>
                                        </p>
                                    </li>
                                    <% }); %>
                            </ul>
                            <% } %>
                    </div>
                    <%- include('partials/footer') %>
    </main>
</body>

</html>