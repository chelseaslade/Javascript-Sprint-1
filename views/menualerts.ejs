<html lang="en">

<head>
    <title>Menu Alerts</title>
    <link rel="stylesheet" type="text/css" href="./styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
</head>

<body>
    <main class="main-content">
        <%- include('partials/nav') %>
            <h3>Featured Items</h3>
            <img src="https://images.unsplash.com/photo-1471253794676-0f039a6aae9d?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                height="300px">
            <div class="specialsMenu">
                <% specialData.forEach((restaurant)=> { %>
                    <h4>
                        <%= restaurant.name %>
                    </h4>
                    <% if (restaurant.specials.length> 0) { %>
                        <ul>
                            <% restaurant.specials.forEach((special)=> { %>

                                <li>
                                    <p>
                                        <%= special.name %> - $<%= special.price %>
                                    </p>
                                </li>

                                <% }) %>
                        </ul>

                        <% } else { %>
                            <ul>
                                <li>
                                    <p>No specials currently!</p>
                                    <% } %>
                                </li>
                            </ul>
                            <% }); %>
            </div>
            <%- include('partials/footer') %>
    </main>
</body>

</html>